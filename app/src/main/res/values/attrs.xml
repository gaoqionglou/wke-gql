<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CollapsingProfileHeaderView">
        <attr name="profileImage" format="reference" />
        <attr name="profileName" format="string" />
        <attr name="profileSubtitle" format="string" />
        <attr name="profileMisc" format="string" />
        <attr name="profileMiscIcon" format="reference" />
        <attr name="profileNameTextSizeSp" format="integer" />
        <attr name="profileSubtitleTextSizeSp" format="integer" />
        <attr name="profileMiscTextSizeSp" format="integer" />
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <!-- {@deprecated Use civ_circlebackground_color instead.} -->
        <attr name="civ_fill_color" format="color" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>
    <declare-styleable name="FlowLayout">
        <!-- 水平间距 -->
        <attr name="flow_horizontal_space" format="dimension" />
        <!-- 垂直间距 -->
        <attr name="flow_vertical_space" format="dimension" />
    </declare-styleable>
    <declare-styleable name="Slider">
        <attr name="backgroundColor" format="color" />
    </declare-styleable>
    <declare-styleable name="RippleTextView">
        <attr name="rippleColor" format="color" />
    </declare-styleable>
    <declare-styleable name="BottomItem">
        <!-- 图标资源 -->
        <attr name="item_icon" format="reference" />
        <!-- 文字 -->
        <attr name="item_text" format="string" />
        <!-- 文字大小 -->
        <attr name="item_text_size" format="dimension" />
        <!-- 文字颜色 -->
        <attr name="item_text_normal_color" format="color" />
        <!-- 文字点击后颜色 -->
        <attr name="item_text_selected_color" format="color" />
    </declare-styleable>
    <declare-styleable name="ShopView">
        <!--矩形按钮的长宽 无效-->
        <attr name="rectWidth" format="dimension" />
        <attr name="rectHeight" format="dimension" />
        <!--矩形圆角-->
        <attr name="rectCornerRadius" format="dimension" />
        <!--矩形圆角-->
        <attr name="rectColor" format="color" />
        <!--矩形按钮文字-->
        <attr name="hintText" format="string" />
        <!--文字颜色-->
        <attr name="hintTextColor" format="color" />
        <!--文字大小-->
        <attr name="hintTextSize" format="dimension" />

        <!--数字文本颜色-->
        <attr name="numTextColor" format="color" />
        <!--数字文本大小-->
        <attr name="numTextSize" format="dimension" />


        <!--左右2个圆的半径-->
        <attr name="radius" format="dimension" />
        <!-- 左右2个圆的边框宽度 -->
        <attr name="circleBorderWidth" format="dimension" />
        <!--左右圆及其边框的颜色-->
        <attr name="leftCircleColor" format="color" />
        <attr name="leftCircleBorderColor" format="color" />
        <attr name="rightCircleColor" format="color" />
        <attr name="rightCircleBorderColor" format="color" />

        <attr name="leftMinusColor" format="color" />
        <attr name="rightAddColor" format="color" />

        <attr name="leftCircleBorderVisibility" format="boolean" />
        <attr name="rightCircleBorderVisibility" format="boolean" />

        <!-- 右圆不可点击时的颜色 -->
        <attr name="rightCircleUnableColor" format="color" />
        <!--左右2个圆的距离 (不是圆心到圆心,是最右侧到最左侧)-->
        <attr name="gapBetweenCircle" format="dimension" />
        <attr name="num" format="integer" />
        <!-- 显示数字的最大值 -->
        <attr name="maxNum" format="integer" />
        <!-- 加减符号到圆的边距 -->
        <attr name="signPadding" format="dimension" />
    </declare-styleable>
</resources>