<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/bottom_item_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:padding="2dp"
        android:src="@drawable/mine" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bottom_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottom_item_icon"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="我的" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/bottom_red_point"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignEnd="@+id/bottom_item_icon"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_msg_unread_count_bg"
        android:visibility="gone" />


    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bottom_item_icon"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_msg_unread_count_bg"
        android:gravity="center"
        android:text="7"
        android:textColor="#FFF"
        android:textSize="8sp" />
</RelativeLayout>