<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wke.gql.shop.ShopActivity">

    <com.wke.gql.shop.ShopView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:circleBorderWidth="1dp"
        app:gapBetweenCircle="80dp"
        app:hintText="加入购物车"
        app:hintTextColor="#e5004a"
        app:hintTextSize="15sp"
        app:leftCircleBorderColor="#969696"
        app:leftCircleColor="#eaeaea"
        app:num="2"
        app:radius="15dp"
        app:rectColor="@color/colorPrimary"
        app:rectCornerRadius="20dp"
        app:rightCircleBorderColor="#969696"
        app:rightCircleColor="#eaeaea" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />


    </LinearLayout>
</RelativeLayout>
